{
  "scripts": {
    "lint:js": "eslint . --fix",
    "test": "jest"
  },
  "devDependencies": {
    "eslint": "^9.26.0",
    "eslint-plugin-jest": "^28.11.0",
    "jest": "^29.0.0",
    "globals": "^16.1.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "semi": ["error", "always"],
      "quotes": ["error", "both"]
    },
    "globals": {
      "__dirname": "readonly",
      "require": "readonly"
    }
  }
}
